<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @garden.plants.each do |plant|  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
            <%= plant.name  %>
            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, plant_path(plant), method: :delete, data: { confirm: "Sure?"}, class: 'card-remove-link' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-4 mb-4">
      <%= simple_form_for [@garden, @plant] do |f|  %>
        <%= f.input :name, placeholder: 'palm tree'   %>
        <%= f.input :image_url, placeholder: 'https//my-plant-url.com'  %>
        <%= f.submit class: 'btn btn-primary'  %>
      <% end %>

    </div>
  </div>
</div>
